<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/left_menu_bag_shape"
    tools:context=".LoginActivity" >
    
    <ImageView 
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:background="@mipmap/icon"
        android:layout_gravity="center_horizontal"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        > 
        <com.jyx.emi.view.ClearEditText
	        android:id="@+id/et_tel"
	        android:layout_width="match_parent"
	        android:layout_height="43dp" 
	        android:hint="手机号/用户名"
	        android:textColorHint="#66000000"
			android:textSize="14sp"
	        android:paddingLeft="10dp"
	        android:background="@mipmap/bag_login_edit"
	        />   
	        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/bag_login_line"
            />
        
	    <com.jyx.emi.view.ClearEditText
	        android:id="@+id/et_pwd"
	        android:layout_width="match_parent"
	        android:layout_height="43dp"
	        android:inputType="textPassword"
	        android:hint="密码"
	        android:textColorHint="#66000000"
			android:textSize="12sp"
	        android:paddingLeft="10dp"
	        android:background="@mipmap/bag_login_edit"
	        />
	
	    <Button 
	        android:id="@+id/bt_login"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:background="@mipmap/bag_login"
	        android:text="登陆"
	        />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
		android:layout_margin="10dp"
        >
	     <TextView 
	        android:id="@+id/tv_registered"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="立即注册"
			 android:padding="10dp"
			 android:textColor="#fff"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_forgot_pwd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="忘记密码"
	        android:layout_weight="1"
	      	android:padding="10dp"
	        android:gravity="right"
	        android:textColor="#fff"
	        />
        
    </LinearLayout>
    

</LinearLayout>
