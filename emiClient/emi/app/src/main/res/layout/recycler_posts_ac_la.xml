<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/actv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="user"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/actv_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actv_user"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="body"
            android:textColor="#9c9c9c"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/actv_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actv_body"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="floor"
            android:textColor="#9c9c9c"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/actv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actv_body"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/actv_floor"
            android:text="time"
            android:textColor="#9c9c9c"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/rl_tv_huifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/actv_time"
            android:layout_marginRight="15dp"
            android:text="回复"
            android:visibility="gone"
            android:textColor="@color/main"
            android:textSize="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:visibility="gone"
        android:id="@+id/ll_huifu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:background="#c3c3c3" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ac_recycler_huifu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:background="@color/main" />


</LinearLayout>