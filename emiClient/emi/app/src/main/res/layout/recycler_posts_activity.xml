<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/poststitle"
            android:id="@+id/iv_title"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/lltv_title"
            />
        <TextView
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lltv_title"
            android:text="title"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/postsbody"
            android:id="@+id/iv_body"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/tv_body"
            />
        <TextView
            android:textColor="#9c9c9c"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/tv_body"
            android:text="body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lltv_title"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/postsprice"
            android:id="@+id/iv_price"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/tv_price"
            />
        <TextView
            android:textColor="#9c9c9c"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/tv_price"
            android:text="price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_body"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/postsaddress"
            android:id="@+id/iv_address"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/tv_address"
            />
        <TextView
            android:textColor="#9c9c9c"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/tv_address"
            android:text="address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/poststime"
            android:id="@+id/iv_time"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/tv_time"
            />
        <TextView
            android:textColor="#9c9c9c"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_time"
            android:layout_marginLeft="30dp"
            android:text="time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main"/>


</LinearLayout>